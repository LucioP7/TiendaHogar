@page "/localidades"
@using System.Diagnostics
@inject IGenericService<Localidad> LocalidadService
@inject ILogger<Localidades> logger
@inject SweetAlertService  SweetAlert 


<HeaderPage TitlePage="Localidades" />

@if (localidades == null)
{
    <p><em>Obteniendo lista de localidades...</em></p>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/agregarlocalidad" class="btn btn-primary"><span class="me-1">+</span>Agregar Localidad</a>
        <span class="badge-soft-primary">Total: @localidades.Count</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th class="text-center" colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var localidad in localidades)
                {
                    <tr>
                        <td>@localidad.Id</td>
                        <td>@localidad.Nombre</td>
                        <td class="text-center">
                            <a class="action-link" href="/editarlocalidad?IdLocalidadEditada=@localidad.Id">Editar</a>
                        </td>
                        <td class="text-center">
                            <button title="Eliminar" class="action-link action-link-danger border-0 bg-transparent" @onclick="@(()=>Eliminar(localidad))">Eliminar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Localidad>? localidades ;

    protected override async Task OnInitializedAsync()
    {
        localidades = await LocalidadService.GetAllAsync(string.Empty);
        logger.LogInformation($"Localidades obtenidas {localidades?.Count}");
    }

    private async Task Eliminar(Localidad localidad)
    {
        SweetAlertResult respuesta = await SweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Borrando Localidad",
            Text = $"¿Está seguro que desea borrar la localidad {localidad.Nombre}?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí, borrarla",
            CancelButtonText = "No, cancelar"
        });

        if (respuesta.IsConfirmed)
        {
            await Eliminar2(localidad);
        }
    }

    private async Task Eliminar2(Localidad localidad)
    {
        await LocalidadService.DeleteAsync(localidad.Id);
        localidades = await LocalidadService.GetAllAsync(string.Empty);
        StateHasChanged();
        await SweetAlert.FireAsync("Localidad", "Eliminada correctamente", SweetAlertIcon.Success);
    }
}
