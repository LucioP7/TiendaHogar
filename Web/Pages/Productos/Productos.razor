@page "/productos"
@inject IGenericService<Producto> ProductoService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Productos" />

@if (productos == null)
{
    <p><em>Obteniendo lista de productos...</em></p>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <button @onclick="AgregarProducto" class="btn btn-primary"><span class="me-1">➕</span>Agregar Producto</button>
        <span class="badge-soft-primary">Total: @productos.Count</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Categoría</th>
                    <th>Proveedor</th>
                    <th class="text-end">Precio</th>
                    <th>Oferta</th>
                    <th class="text-center" colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in productos)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.Marca?.Nombre</td>
                        <td>@producto.Categoria?.Nombre</td>
                        <td>@producto.Proveedor?.Nombre</td>
                        <td class="text-end">@producto.Precio.ToString("N2")</td>
                        <td>
                            <span class="@(producto.Oferta ? "badge-soft-primary" : "text-muted")">@(producto.Oferta ? "Sí" : "No")</span>
                        </td>
                        <td class="text-center">
                            <a class="action-link" href="/editarproducto?IdProductoEditado=@producto.Id">Editar</a>
                        </td>
                        <td class="text-center">
                            <button title="Eliminar" @onclick="()=>ConfirmarEliminar(producto)" class="action-link action-link-danger border-0 bg-transparent">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Producto>? productos;

    protected override async Task OnInitializedAsync()
    {
        productos = await ProductoService.GetAllAsync(string.Empty);
    }

    public void AgregarProducto()
    {
        NavigationManager.NavigateTo("/agregarproducto");
    }

    private async Task ConfirmarEliminar(Producto producto)
    {
        var respuesta = await SweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminar Producto",
            Text = $"¿Está seguro de eliminar el producto {producto.Nombre}?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí",
            CancelButtonText = "No"
        });
        if (respuesta.IsConfirmed)
        {
            await Eliminar(producto);
        }
    }

    private async Task Eliminar(Producto producto)
    {
        await ProductoService.DeleteAsync(producto.Id);
        productos = await ProductoService.GetAllAsync(string.Empty);
        StateHasChanged();
        await SweetAlert.FireAsync("Producto", "Eliminado correctamente", SweetAlertIcon.Success);
    }
}
