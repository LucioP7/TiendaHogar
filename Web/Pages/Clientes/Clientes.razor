@page "/clientes"
@inject IGenericService<Cliente> ClienteService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Clientes"/>

@if (clientes == null)
{
    <p><em>Obteniendo lista de clientes...</em></p>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <button class="btn btn-primary" @onclick="AgregarCliente"><span class="me-1">+</span>Agregar Cliente</button>
        <span class="badge-soft-primary">Total: @clientes.Count</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Localidad</th>
                    <th class="text-center" colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in clientes)
                {
                    <tr>
                        <td>@cliente.Id</td>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Direccion</td>
                        <td>@cliente.Localidad?.Nombre</td>
                        <td class="text-center">
                            <a class="action-link" href="/nuevoeditarcliente?IdClienteEditado=@cliente.Id">Editar</a>
                        </td>
                        <td class="text-center">
                            <button title="Eliminar" class="action-link action-link-danger border-0 bg-transparent" @onclick="@(()=>Eliminar(cliente))">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@code {
    private List<Cliente>? clientes;

    protected override async Task OnInitializedAsync()
    {
        clientes = await ClienteService.GetAllAsync(string.Empty);
    }
    private void AgregarCliente()
    {
        NavigationManager.NavigateTo("/nuevoeditarcliente");
    }
    private async Task Eliminar(Cliente cliente)
    {
        SweetAlertResult respuesta = await SweetAlert.FireAsync(new SweetAlertOptions
            {
                Title = "Borrando Cliente",
                Text = $"¿Está seguro que desea borrar este cliente {cliente.Nombre}?",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, quiero borrarlo",
                CancelButtonText = "No, esperar"
            });

        if (respuesta.IsConfirmed)
        {
            await Eliminar2(cliente);
        }
    }

    private async Task Eliminar2(Cliente cliente)
    {
        await ClienteService.DeleteAsync(cliente.Id);
        clientes = await ClienteService.GetAllAsync(string.Empty);
        StateHasChanged();
        await SweetAlert.FireAsync("Cliente", "Eliminada correctamente", SweetAlertIcon.Success);
    }
}