@page "/categorias"
@inject IGenericService<Categoria> CategoriaService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Categorías" />

@if (categorias == null)
{
    <p><em>Obteniendo lista de categorías...</em></p>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <button class="btn btn-primary" @onclick="AgregarCategoria"><span class="me-1">+</span>Agregar Categoría</button>
        <span class="badge-soft-primary">Total: @categorias.Count</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th class="text-center" colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in categorias)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Nombre</td>
                        <td>@categoria.Descripcion</td>
                        <td class="text-center">
                            <a class="action-link" href="/nuevaeditarcategoria?IdCategoriaEditada=@categoria.Id">Editar</a>
                        </td>
                        <td class="text-center">
                            <button class="action-link action-link-danger border-0 bg-transparent" @onclick="() => Eliminar(categoria)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Categoria>? categorias;

    protected override async Task OnInitializedAsync()
    {
        categorias = await CategoriaService.GetAllAsync(string.Empty);
    }

    private void AgregarCategoria()
    {
        NavigationManager.NavigateTo("/nuevaeditarcategoria");
    }

    private async Task Eliminar(Categoria categoria)
    {
        var r = await SweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminar Categoría",
            Text = $"¿Está seguro de eliminar {categoria.Nombre}?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí",
            CancelButtonText = "No"
        });
        if (r.IsConfirmed)
        {
            await Eliminar2(categoria);
        }
    }

    private async Task Eliminar2(Categoria categoria)
    {
        await CategoriaService.DeleteAsync(categoria.Id);
        categorias = await CategoriaService.GetAllAsync(string.Empty);
        StateHasChanged();
        await SweetAlert.FireAsync("Categoria", "Eliminada correctamente", SweetAlertIcon.Success);
    }
}
