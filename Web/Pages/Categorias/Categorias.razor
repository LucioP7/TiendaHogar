@page "/categorias"
@inject IGenericService<Categoria> CategoriaService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Categorías" />

@if (categorias == null)
{
    <p><em>Obteniendo lista de categorías...</em></p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="AgregarCategoria">Agregar Categoría</button>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in categorias)
            {
                <tr>
                    <td>@categoria.Id</td>
                    <td>@categoria.Nombre</td>
                    <td>@categoria.Descripcion</td>
                    <td><a href="/nuevaeditarcategoria?IdCategoriaEditada=@categoria.Id">Editar</a></td>
                    <td><button class="btn btn-danger" @onclick="() => Eliminar(categoria)">Eliminar</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Categoria>? categorias;

    protected override async Task OnInitializedAsync()
    {
        categorias = await CategoriaService.GetAllAsync(string.Empty);
    }

    private void AgregarCategoria()
    {
        NavigationManager.NavigateTo("/nuevaeditarcategoria");
    }

    private async Task Eliminar(Categoria categoria)
    {
        var r = await SweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminar Categoría",
            Text = $"¿Está seguro de eliminar {categoria.Nombre}?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí",
            CancelButtonText = "No"
        });
        if (r.IsConfirmed)
        {
            await CategoriaService.DeleteAsync(categoria.Id);
            categorias = await CategoriaService.GetAllAsync(string.Empty);
            StateHasChanged();
        }
    }
}
