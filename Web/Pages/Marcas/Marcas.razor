@page "/marcas"
@inject IGenericService<Marca> MarcaService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Marcas" />

@if (marcas == null)
{
    <p><em>Obteniendo lista de marcas...</em></p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="AgregarMarca">Agregar Marca</button>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var marca in marcas)
            {
                <tr>
                    <td>@marca.Id</td>
                    <td>@marca.Nombre</td>
                    <td>
                        <a href="/nuevaeditarmarca?IdMarcaEditada=@marca.Id">Editar</a>
                    </td>
                    <td>
                        <button class="btn btn-danger" @onclick="() => Eliminar(marca)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Marca>? marcas;
    private bool cargando = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarMarcas();
    }

    private async Task CargarMarcas()
    {
        cargando = true;
        try
        {
            marcas = await MarcaService.GetAllAsync(string.Empty);
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", "No se pudo obtener la lista: " + ex.Message, SweetAlertIcon.Error);
        }
        finally
        {
            cargando = false;
        }
    }

    private void AgregarMarca()
    {
        NavigationManager.NavigateTo("/nuevaeditarmarca");
    }

    private async Task Eliminar(Marca marca)
    {
        var r = await SweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminar Marca",
            Text = $"¿Está seguro de eliminar {marca.Nombre}?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí",
            CancelButtonText = "No"
        });
        if (r.IsConfirmed)
        {
            try
            {
                await MarcaService.DeleteAsync(marca.Id);
                await SweetAlert.FireAsync("Marca", "Eliminada correctamente", SweetAlertIcon.Success);
                await CargarMarcas();
                StateHasChanged();
            }
            catch (Exception ex)
            {
                await SweetAlert.FireAsync("Error", "No se pudo eliminar: " + ex.Message, SweetAlertIcon.Error);
            }
        }
    }
}
