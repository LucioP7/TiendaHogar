@page "/marcas"
@inject IGenericService<Marca> MarcaService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Marcas" />

@if (marcas == null)
{
    <p><em>Obteniendo lista de marcas...</em></p>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <button class="btn btn-primary" @onclick="AgregarMarca"><span class="me-1">+</span>Agregar Marca</button>
        <span class="badge-soft-primary">Total: @marcas.Count</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th class="text-center" colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var marca in marcas)
                {
                    <tr>
                        <td>@marca.Id</td>
                        <td>@marca.Nombre</td>
                        <td class="text-center">
                            <a class="action-link" href="/nuevaeditarmarca?IdMarcaEditada=@marca.Id">Editar</a>
                        </td>
                        <td class="text-center">
                            <button class="action-link action-link-danger border-0 bg-transparent" @onclick="() => Eliminar(marca)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Marca>? marcas;
    private bool cargando = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarMarcas();
    }

    private async Task CargarMarcas()
    {
        cargando = true;
        try
        {
            marcas = await MarcaService.GetAllAsync(string.Empty);
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", "No se pudo obtener la lista: " + ex.Message, SweetAlertIcon.Error);
        }
        finally
        {
            cargando = false;
        }
    }

    private void AgregarMarca()
    {
        NavigationManager.NavigateTo("/nuevaeditarmarca");
    }

    private async Task Eliminar(Marca marca)
    {
        var r = await SweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminar Marca",
            Text = $"¿Está seguro de eliminar {marca.Nombre}?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí",
            CancelButtonText = "No"
        });
        if (r.IsConfirmed)
        {
            await Eliminar2(marca);
        }
    }

    private async Task Eliminar2(Marca marca)
    {
        await MarcaService.DeleteAsync(marca.Id);
        marcas = await MarcaService.GetAllAsync(string.Empty);
        StateHasChanged();
        await SweetAlert.FireAsync("Marca", "Eliminada correctamente", SweetAlertIcon.Success);
    }
}
