@page "/nuevaeditarmarca"
@inject IGenericService<Marca> MarcaService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Marca" />

@if (marca == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <EditForm Model="marca" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />
        <div class="form-group mb-2">
            <label for="Nombre">Nombre:</label>
            <InputText id="Nombre" class="form-control" @bind-Value="marca.Nombre" />
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <ValidationSummary />
    </EditForm>
}

@code {
    [SupplyParameterFromQuery]
    [Parameter]
    public int IdMarcaEditada { get; set; }

    private Marca? marca;
    private bool procesando = false;

    protected override async Task OnInitializedAsync()
    {
        if (IdMarcaEditada != 0)
        {
            marca = await MarcaService.GetByIdAsync(IdMarcaEditada) ?? new Marca();
        }
        else
        {
            marca = new Marca();
        }
    }

    private async Task Guardar()
    {
        if (procesando) return;
        procesando = true;
        try
        {
            if (string.IsNullOrWhiteSpace(marca!.Nombre))
            {
                await SweetAlert.FireAsync("Error", "El nombre es obligatorio", SweetAlertIcon.Error);
                return;
            }

            if (IdMarcaEditada == 0)
            {
                var creada = await MarcaService.AddAsync(marca);
                await SweetAlert.FireAsync("Marca", $"Marca '{creada?.Nombre}' creada correctamente", SweetAlertIcon.Success);
            }
            else
            {
                await MarcaService.UpdateAsync(marca);
                await SweetAlert.FireAsync("Marca", $"Marca '{marca.Nombre}' actualizada", SweetAlertIcon.Success);
            }
            NavigationManager.NavigateTo("/marcas");
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", "No se pudo guardar la marca: " + ex.Message, SweetAlertIcon.Error);
        }
        finally
        {
            procesando = false;
        }
    }
}
